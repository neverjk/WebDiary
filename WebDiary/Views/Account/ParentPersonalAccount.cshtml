@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "ParentPersonalAccount";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Personal Account</title>
</head>
<body>
    <div class="container">
        <h2>@Model.Parent.UserProfile.FirstName @Model.Parent.UserProfile.MiddleName @Model.Parent.UserProfile.LastName</h2>
        <p class="card-text">Parent </p>

        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-body">
                        <img style="height:auto; width:200px; padding-top:7px;" src="https://pmdoc.ru/wp-content/uploads/default-avatar.png" />

                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="row" style="margin-bottom:5px">
                    <div class="card w-100">
                        <div class="card-body">
                            <p class="card-text">Email: @Model.GetUserInfo.Email </p>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="card w-100">
                        <div class="card-body">
                            <p class="card-text">Phone Number: @Model.Parent.UserProfile.User.PhoneNumber </p>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="card w-100">
                        <div class="card-body">
                            <p class="card-text">Gender: @Model.Parent.UserProfile.Gender </p>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:5px">
                    <div class="card w-100">
                        <div class="card-body">
                            <h6 class="card-title">Kids</h6>
                            @{
                                foreach (Student student in Model.Kids)
                                {
                                    @await Html.PartialAsync("_StudentCard", student);
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>